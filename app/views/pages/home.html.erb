<%= form_tag '/search', method: 'get', do %>
  <fieldset>
    <%= text_field_tag :search, params[:search], placeholder: '...' %>
  </fieldset>
  <fieldset id="search_buttons">
    <%= radio_button_tag 'search', 'all', checked: true %>
    <%= label_tag 'search_all', 'All' %>
    <%= radio_button_tag 'search', 'bricks' %>
    <%= label_tag 'search_bricks', 'Bricks' %>
    <%= radio_button_tag 'search', 'categories' %>
    <%= label_tag 'search_categories', 'Categories' %>
    <%= radio_button_tag 'search', 'states' %>
    <%= label_tag 'search_states', 'States' %>
  </fieldset>
<% end %>                       