<%= form_tag '/search', method: 'get', do %>
  <fieldset>
    <%= text_field_tag :search, params[:search], placeholder: '...' %>
  </fieldset>
  <fieldset>
    <%= radio_button_tag 'all', 'all', checked: true %>
    <%= radio_button_tag 'Bricks', 'bricks' %>
    <%= radio_button_tag 'Categories', 'categories' %>
    <%= radio_button_tag 'States', 'states' %>
  </fieldset>
<% end %>                       