<!DOCTYPE html>
<html>
<head>
  <title>Pkproject</title>
  <%= stylesheet_link_tag    "application" %>
  <%= google_font_link_tag "Puritan" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body id="<%= view_id %>">
  <nav id="topNav">
    <%= link_to 'Bricks', bricks_path, class: 'left' %>
    <%= link_to 'Categories', categories_path %>
    <%= link_to 'States', states_path %>
    <%= link_to_unless_current 'About', about_path %>
    <%= link_to_unless_current 'Help', help_path %>
    <%= link_to_unless_current 'Contact', contact_path %>
  </nav>
  <header id="header">
    <h1><%= link_to_unless_current 'pkProject', root_url %></h1>
  </header>

  <div id="content">
    <%= yield %>
  </div>
  
  <footer id="footer">
    <p id="copy">
      <a href="http://www.umc.edu">The University of Mississippi Medical Center</a>
    </p>
  </footer>

</body>
</html>
